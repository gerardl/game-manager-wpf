<Window x:Class="GameManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameManager.UI"
        xmlns:views="clr-namespace:GameManager.UI.Views"
        mc:Ignorable="d"
        Title="GameManager" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel>
            <Button x:Name="btnPlayers" Content="Manage Players" Margin="2,5" Click="btnPlayers_Click"></Button>
            <Button x:Name="btnMobs" Content="Manage Mobs" Margin="2,5" Click="btnMobs_Click"></Button>
            <Button x:Name="btnAccounts" Content="Manage Users" Margin="2,5"></Button>
        </StackPanel>
        <StackPanel x:Name="MainContent" Grid.Column="1">
        </StackPanel>

    </Grid>
</Window>
